<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.navigation.TitleFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBase"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseball"
                />

            <Button
                android:id="@+id/baseball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Baseball"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/buttonbackround"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageBasket"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/basketball"
                />

            <Button
                android:id="@+id/basketball"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Basketball"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/buttonbackround"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageFoot"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/football"
                />

            <Button
                android:id="@+id/football"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Football"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/buttonbackround"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageOther"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/other"
                />

            <Button
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  Other"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="@dimen/button_text_size"
                android:background="@drawable/buttonbackround"/>

        </LinearLayout>

    </LinearLayout>







</layout>